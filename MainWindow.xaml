<Window x:Class="browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        KeyboardNavigation.TabNavigation="None"
        KeyboardNavigation.ControlTabNavigation="None"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        SizeChanged="Window_SizeChanged"
        Background="White">
    <Window.Resources>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Width="15" Height="15" x:Key="closeImage" Source="/Images/close.png"></Image>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Width="15" Height="15" x:Key="reloadImage" Source="/Images/reload.png"></Image>
    </Window.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="37"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Tabok -->
        <TabControl Padding="0" x:Name="tabControl" Grid.RowSpan="4" SelectionChanged="tabControl_SelectionChanged" PreviewKeyDown="tabControl_PreviewKeyDown" Background="Red">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel x:Name="HeaderPanel"
                                    Panel.ZIndex ="1" 
                                    KeyboardNavigation.TabIndex="1"
                                    Grid.Row="0"
                                    Margin="5,5,100,0"
                                    IsItemsHost="true"/>
                        <ContentPresenter x:Name="PART_SelectedContentHost"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      Margin="{TemplateBinding Padding}"
                                      ContentSource="SelectedContent" Grid.Row="1"/>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel" Height="30">
                                    <Border x:Name="border" CornerRadius="5,5,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite" Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"    
                                                        ContentSource="Header"/>
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#26FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#26FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
        </TabControl>
        
        <!-- navigációs gombok -->
        <StackPanel Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="0,0,6,0"
            HorizontalAlignment="Right">

            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="32"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Style>
            </StackPanel.Resources>

            <!-- Minimize -->
            <Button x:Name="MinimizeButton"
                Click="MinimizeButton_Click"
                ToolTip="Lekicsinyítés">
                <TextBlock RenderOptions.BitmapScalingMode="HighQuality" Text="🗕" FontSize="14" Foreground="Black"/>
            </Button>

            <!-- Maximize / Restore -->
            <Button x:Name="MaximizeButton"
                Click="MaximizeButton_Click"
                ToolTip="Maximalizálás">
                <TextBlock RenderOptions.BitmapScalingMode="HighQuality" Text="🗖" FontSize="14" Foreground="Black"/>
            </Button>

            <!-- Close -->
            <Button x:Name="CloseButton"
                Click="CloseButton_Click"
                ToolTip="Bezárás">
                <TextBlock RenderOptions.BitmapScalingMode="HighQuality" Text="✕" FontSize="14" Foreground="Black"/>
            </Button>
        </StackPanel>

        <!-- előre, hátra, beállítások, profil gombok, URL sáv -->
        <Grid Grid.Row="1" Background="#26FFFFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="6,0,0,0">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="32"/>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </StackPanel.Resources>

                <!-- Vissza -->
                <Button x:Name="BackButton"
                        Click="BackButton_Click">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/back.png" Width="18" Height="18"></Image>
                </Button>

                <!-- Előre -->
                <Button x:Name="ForwardButton"
                        Click="ForwardButton_Click">

                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/next.png" Width="18" Height="18"></Image>
                </Button>

                <!-- Újratöltés -->
                <Button x:Name="ReloadButton"
                        Click="ReloadButton_Click"
                        VerticalAlignment="Center">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/reload.png" Width="18" Height="18"></Image>
                </Button>
            </StackPanel>

            <!-- URL sáv -->
            <Border x:Name="AddressBorder"
                Grid.Column="1"
                VerticalAlignment="Center"
                Height="30"
                Margin="10,0"
                Background="#33000000"
                CornerRadius="15"
                
                BorderThickness="1">

                <TextBox x:Name="AddressBar"
                         Margin="12,0"
                         Padding="0,0,20,0"
                         BorderThickness="0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Background="Transparent"
                         GotFocus="AddressBar_GotFocus"
                         LostFocus="AddressBar_LostFocus"
                         KeyDown="AddressBar_KeyDown"/>
            </Border>
            <Button x:Name="favoritesButton" Grid.Column="1" Width="20" Height="20"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Background="Transparent" BorderThickness="0"
                    Margin="0,0,20,0" Click="favoritesButton_Click">
                <Image RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20" Height="20" Source="/Images/star.png"></Image>
            </Button>
    
            <!-- beállítások, profil gomb -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Border x:Name="usernameButton" Background="Blue" CornerRadius="15" Width="100" Height="30">
                    <Button Background="Transparent" Cursor="Hand" Width="100" BorderThickness="0" BorderBrush="Transparent" Height="20">
                        <StackPanel Orientation="Horizontal" Width="100">
                            <Image Margin="5,0,0,0" Width="20" Height="20" HorizontalAlignment="Left" RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/loginicon.png"></Image>
                            <TextBlock Foreground="White" x:Name="userName" Margin="5,0" Width="60" Text="Username" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Button>
                </Border>
                <Button x:Name="settingsButton" Click="settingsButton_Click" Background="Transparent" BorderThickness="0" Width="20" Height="20" Margin="15,0" Cursor="Hand">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/settings.jpg"></Image>
                </Button>
            </StackPanel>
            
        </Grid>
        
        <!-- beállítások ablak -->
        <Border x:Name="settingsWindow" Visibility="Hidden" Background="Gray" Width="200" Height="300"
                Grid.RowSpan="4" Panel.ZIndex="1"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,80,0,0" CornerRadius="10">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <Grid Background="Transparent">
                    <TextBlock Background="DarkGray" HorizontalAlignment="Left" Width="100" Text="Animáció időzítő  (s)"></TextBlock>
                    <TextBox x:Name="AnimationTimerTextBox" KeyDown="TextBox_KeyDown" BorderThickness="0" Background="LightGray" HorizontalAlignment="Right" Width="100" Text="20"></TextBox>
                </Grid>
                <Grid Background="Transparent">
                    <TextBlock Background="DarkGray" HorizontalAlignment="Left" Width="100" Text="Sötét mód"></TextBlock>
                    <Button BorderThickness="0" Background="LightGray" HorizontalAlignment="Right" Width="100" Content="Váltás"></Button>
                </Grid>
            </StackPanel>
        </Border>

        <!-- kedvencek ablak -->
        <Border x:Name="favoritesWindow" Visibility="Hidden" Background="Gray" Width="200" Height="300"
                Grid.RowSpan="4" Panel.ZIndex="2"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                CornerRadius="10"
                Margin="10,10,10,10">
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <Button x:Name="favoriteButtonDelete" Content="Törlés" Click="favoriteButtonDelete_Click"></Button>
            </StackPanel>
        </Border>

        <!-- kedvencek sáv -->
        <Border BorderBrush="#26000000" BorderThickness="0,0,0,2" Grid.Row="2">
            <StackPanel x:Name="favoritesContainer"  Orientation="Horizontal" Background="#26FFFFFF">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Cursor="Hand" Padding="5,0" BorderThickness="0" CornerRadius="5" Background="Transparent" VerticalAlignment="Center">
                                        <ContentPresenter></ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </Border>
    </Grid>
</Window>
