<Page x:Class="browser.Pages.Animation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:browser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Animation">

    <Canvas Background="Wheat">
        <Image Source="Images/shark-fin.png" Width="30" Visibility="Visible"
       x:Name="SharkImage" 
       Canvas.Left="0"
       Canvas.Top="100"
       RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="FlipTransform" ScaleX="-1"/>
                    <RotateTransform x:Name="RotateTransform" Angle="0"/>
                    <TranslateTransform x:Name="MoveTransform"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock Text="Gugul" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"
           FontSize="30" Canvas.Left="691" Canvas.Top="10"/>
    </Canvas>
</Page>
